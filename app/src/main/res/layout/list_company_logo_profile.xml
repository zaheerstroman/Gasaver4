<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


<!--    android:background="@color/colorShopSecond"-->
<!--    android:background="@drawable/company_brand_add_bg_rounded_corners"-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_profile_img"
        android:layout_width="@dimen/_65sdp"
        android:layout_height="@dimen/_75sdp"
        android:layout_gravity="top"
        android:layout_margin="5sp"
        android:paddingTop="20dp"
        app:circularflow_radiusInDP="100"
        android:src="@drawable/gas_sever_icons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/circleImageViewStyle"

        android:layout_marginTop="20dp"

        android:clipToPadding="false"
        android:scrollbars="none"
        app:cardCornerRadius="10dp"

        android:onClick="changeColor"
        android:backgroundTint="@drawable/company_brand_add_bg_rounded_corners"

        android:foreground="?android:attr/selectableItemBackground"
        />



</androidx.constraintlayout.widget.ConstraintLayout>